<%- include("header") -%>
  <h1>My Properties</h1>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Address</th>
        <th scope="col">Neighborhood</th>
        <th scope="col">Sqft</th>
        <th scope="col">Parking</th>
        <th scope="col">Public Transportation</th>
        <th scope="col">Workspaces</th>
        <th scope="col">Actions</th>
        <th scope="col">Image</th> 
      </tr>
    </thead>
    <tbody>
      <% for (let id in properties) { %>
        <% if (properties[id].address1) { %>
          <% if (properties[id].sqft) { %>
        <tr>
          <td>
            <%= properties[id].address1 %>
            <% if (properties[id].address2) { %>
              <%= properties[id].address2 %>,
            <% } %>
            <%= properties[id].city %>,
            <%= properties[id].state %>,
            <%= properties[id].postalcode %>
          </td>
          <td><%= properties[id].neighborhood %></td>
          <td><%= properties[id].sqft %></td>
          <td><%= properties[id].parking === 'yes' ? 'yes' : 'no' %></td>
          <td><%= properties[id].publicTrans === 'yes' ? 'yes' : 'no' %></td>
          <td><%= properties[id].workspaces.length %></td>
          <td>
            <a class="btn btn-primary" href="/properties/<%= properties[id]._id %>/workspaces">View Workspaces</a>
            <a class="btn btn-warning" href="/properties/<%= properties[id]._id %>/edit">Edit</a>
            <form action="/properties/<%= properties[id]._id %>/delete" method="POST" enctype="multipart/form-data">
              <input class="btn btn-danger" type="submit" value="Delete">
            </form>
          </td>
          <td><img src="<%= properties[id].imageUrl %>" alt="Image of <%= properties[id].address1 %>" style="width: 100px; height: 100px;"></td>
        </tr>
      <% } } }%>
    </tbody>
  </table>
  <a class="btn btn-success" href="/properties/new">Add Property</a>
  <a class="btn btn-secondary" href="/">List all Workspaces</a>
  <%- include("footer") -%>
