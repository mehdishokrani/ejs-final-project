<!DOCTYPE html>
<html>
  <head>
    <!-- Required meta tags for Bootstrap-->
    <meta charset="utf8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <link rel="stylesheet" href="/styles.css" />


    <title>Available Workspaces</title>
  </head>
  <body class="container pt-5">
    <!-- Login button -->
    <a class="btn btn-primary login-button" href="/login">Login</a>

    <h1>Available Workspaces</h1>
    <form id="searchForm" method="get" action="/" class="d-flex align-items-center">
      <div class="form-group d-flex flex-grow-1 align-items-center">
        <label for="address" class="me-2">Address:</label>
        <input
          type="text"
          id="address"
          name="address"
          class="form-control me-2 address-input"
        />
        <button type="submit" class="btn btn-primary">Search</button>
      </div>
    </form>
    <br />

    <label for="smokingFilter">Smoking:</label>
    <select id="smokingFilter">
      <option value="">All</option>
      <option value="yes">Yes</option>
      <option value="no">No</option>
    </select>

    <label for="acFilter">Has AC:</label>
    <select id="acFilter">
      <option value="">All</option>
      <option value="yes">Yes</option>
      <option value="no">No</option>
    </select>

    <label for="publicTransFilter">Public Trans:</label>
    <select id="publicTransFilter">
      <option value="">All</option>
      <option value="yes">Yes</option>
      <option value="no">No</option>
    </select>

    <label class="required-label" for="typefilter">Type:</label>
    <div
      class="btn-group"
      role="group"
      aria-label="Basic checkbox toggle button group"
      id="typefilter"
    >
      <input
        type="checkbox"
        class="btn-check"
        value="meeting room"
        name="typefilter"
        id="typeMeetingRoom"
        autocomplete="off"
        required
        checked
      />
      <label
        class="btn btn-outline-success btn-group-label"
        for="typeMeetingRoom"
      >
        Meeting Room
      </label>

      <input
        type="checkbox"
        class="btn-check"
        value="private office room"
        name="typefilter"
        id="typePrivateOffice"
        autocomplete="off"
        required
        checked
      />
      <label
        class="btn btn-outline-success btn-group-label"
        for="typePrivateOffice"
      >
        Private Office Room
      </label>

      <input
        type="checkbox"
        class="btn-check"
        value="desks in open work area"
        name="typefilter"
        id="typeDesk"
        autocomplete="off"
        required
        checked
      />
      <label
        class="btn btn-outline-success btn-group-label"
        for="typeDesk"
      >
        Desks in Open Work Area
      </label>
    </div>

    <br />
    <table class="table">
      <thead>
        <tr class="sortable">
          <th scope="col">Type</th>
          <th scope="col" class="num-sort">Seats</th>
          <th scope="col">Smoking</th>
          <th scope="col" class="num-sort">Availability</th>
          <th scope="col">Lease</th>
          <th scope="col" class="num-sort">Price</th>
          <th scope="col">Has AC</th>
          <th scope="col">Printer</th>
          <th scope="col">Landline</th>
          <th scope="col">Has Onsite Gym</th>
          <th scope="col">Parking</th>
          <th scope="col">Public Trans</th>
          <th scope="col">Address</th>
          <th scope="col">Image</th>
          <th scope="col">Rating</th>
      <th scope="col">Comments</th>
      <th scope="col">Owner Information</th>
        </tr>
      </thead>
      <tbody>
        <% workspaces.forEach((workspace, index) => { const property = properties.find(p => p._id.toString() === workspace.propertyId.toString());%>
          <tr class="<%= index % 2 === 0 ? 'odd-row' : '' %>">
            <td><%= workspace.type %></td>
            <td><%= workspace.seats %></td>
            <td><%= workspace.smoking === "true" ? 'yes' : 'no' %></td>
            <td><%= workspace.availability.toLocaleDateString() %></td>
            <td><%= workspace.lease %></td>
            <td><%= workspace.price %></td>
            <td><%= workspace.hasAirConditioner === "true" ? 'yes' : 'no' %></td>
            <td><%= workspace.printer %></td>
            <td><%= workspace.landline %></td>
            <td><%= workspace.hasOnsiteGym === "true" ? 'yes' : 'no' %></td>
            <td><%= workspace.parking %></td>
            <% if (workspace.propertyId) { %> 
            <% const property = properties.find(p => p._id.toString() === workspace.propertyId.toString()); %>
            <td><%= property ? property.publicTrans : 'N/A' %></td>
            <td><%= property.address1 %> <% if (property.address2) { %> <%= property.address2 %>, <% } %> <%= property.city %>, <%= property.state %>, <%= property.postalcode %></td>
            <% } else { %>
            <td>N/A</td>
            <td>N/A</td>
            <% } %>
            <td>
              <img src="<%= workspace.imageUrl %>" alt="No image for <%= workspace.type %>" class="image-size" />
            </td>
            <td>
              <% if (typeof workspace.avgRating === 'number') { %>
                <%= workspace.avgRating.toFixed(2) %>
              <% } else { %>
                <%= workspace.avgRating %>
              <% } %>
            </td>
            <td>
              <a href="/workspace/<%= workspace._id %>/comments" class="btn btn-primary">View Comments</a>
            </td>
            <% if (user && user.role === 'Coworker') { %>
              <td>
                <a href="/reviews/new/<%= workspace._id %>" class="btn btn-primary">Add Review</a>
              </td>
              <% if (property && propertyToOwner[property._id.toString()]) { %>
                <td>
                  Owner Name: <%= propertyToOwner[property._id.toString()].name %><br />
                  Phone: <%= propertyToOwner[property._id.toString()].phone %><br />
                  Email: <%= propertyToOwner[property._id.toString()].email %>
                </td>
              <% } else { %>
                <td>N/A</td>
              <% } %>   
              
            <% } %>
          </tr>
        <% }); %>
    </tbody>
    </table>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/js/select2.min.js"></script>

    <!-- Reference to the Filter Table JavaScript file -->
    <script src="/filterTable.js"></script>

    <!-- Reference to the Sort Table JavaScript file -->
    <script src="/sortTable.js"></script>

    <!-- Reference to the Search Table JavaScript file -->
    <script src="/searchTable.js"></script>
  </body>
</html>


