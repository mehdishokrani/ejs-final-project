<!DOCTYPE html>
<html>
<head>
  <!-- Required meta tags for Bootstrap-->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <title>My Workspaces</title>
</head>
<body class="container pt-5">
  <h1>My Workspaces</h1>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Type</th>
        <th scope="col">Seats</th>
        <th scope="col">Smoking</th>
        <th scope="col">Availability</th>
        <th scope="col">Lease</th>
        <th scope="col">Price</th>
        <th scope="col">Air Conditioner</th>
        <th scope="col">Printer</th>
        <th scope="col">Landline</th>
        <th scope="col">Gym</th>
        <th scope="col">Parking</th>
        <th scope="col">Property Address</th> <!-- Changed from Property ID to Property Address -->
        <th scope="col">Actions</th> <!-- Column for the actions -->
      </tr>
    </thead>
    <tbody>
      <% workspaces.forEach((workspace) => { %>
        <tr>
          <td><%= workspace.type %></td>
          <td><%= workspace.seats %></td>
          <td><%= workspace.smoking ? 'Yes' : 'No' %></td>
          <td><%= workspace.availability %></td>
          <td><%= workspace.lease %></td>
          <td><%= workspace.price %></td>
          <td><%= workspace.hasAirConditioner ? 'Yes' : 'No' %></td>
          <td><%= workspace.printer %></td>
          <td><%= workspace.landline %></td>
          <td><%= workspace.hasOnsiteGym ? 'Yes' : 'No' %></td>
          <td><%= workspace.parking %></td>
          <td><%= workspace.propertyAddress %></td> <!-- Changed from workspace.propertyId to workspace.propertyAddress -->
          <td> <!-- Add this line for the action buttons -->
            <a class="btn btn-warning" href="/properties/<%= workspace.propertyId %>/workspaces/<%= workspace.workspaceId %>/edit">Edit</a> <!-- Change here -->
          </td> <!-- End of action buttons -->
        </tr>
      <% }) %>
    </tbody>
  </table>
  <a class="btn btn-secondary" href="/properties">List all Properties</a>
</body>
</html>
